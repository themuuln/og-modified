{
  // fonts
  "editor.fontFamily": "JetbrainsMono Nerd Font",
  // "editor.fontFamily": "FiraCode Nerd Font",
  // "editor.fontFamily": "GeistMono Nerd Font",
  // "editor.fontFamily": "Hack Nerd Font",
  "terminal.integrated.fontSize": 14,
  "editor.lineHeight": 27,
  "editor.fontSize": 21,
  // "editor.fontWeight": "300",
  "editor.fontWeight": "400",
  "editor.fontLigatures": true,
  "editor.fontVariations": false,

  "editor.quickSuggestionsDelay": 0,
  "search.showLineNumbers": true,
  "window.density.editorTabHeight": "compact",
  "editor.language.brackets": [],
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "editor.suggest.preview": true,
  "editor.suggest.localityBonus": true,
  "editor.cursorSurroundingLines": 8,
  "editor.lineNumbers": "relative",
  "github.copilot.chat.followUps": "always",
  "github.copilot.chat.localeOverride": "en",

  // Git / Git Diff
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.blame.editorDecoration.enabled": true,
  "git.blame.statusBarItem.enabled": true,
  "git.blame.statusBarItem.template": "${authorDateAgo}",
  "gitlens.plusFeatures.enabled": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.experimental.showMoves": true,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.hideUnchangedRegions.minimumLineCount": 3,
  "diffEditor.hideUnchangedRegions.contextLineCount": 3,
  "diffEditor.renderSideBySide": true,
  "scm.alwaysShowRepositories": true, // true if you work on multiple project at the same time
  "scm.defaultViewMode": "tree", // more organized
  "scm.repositories.sortOrder": "name", // more organized

  // Explorer
  "explorer.confirmPasteNative": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // Extensions
  "extensions.ignoreRecommendations": true,
  "extensions.experimental.affinity": {
    "VSpaceCode.whichkey": 1,
    "vscodevim.vim": 1,
    "asvetliakov.vscode-neovim": 1
  },

  // Other
  "npm.packageManager": "yarn",
  "npm.exclude": "",
  "terminal.integrated.gpuAcceleration": "on", // smooth

  // Formatter
  "editor.formatOnSave": true, // Community Standard
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "search.exclude": {
    "package-lock.json": true,
    "build": false
  },
  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true,
  "prettier.printWidth": 120,
  "prettier.trailingComma": "all",
  "prettier.ignorePath": ".gitignore",

  // Editor
  "editor.showFoldingControls": "always", // ease navigation vim
  "editor.minimap.showSlider": "always", // to locate cursor rapidly
  "editor.unicodeHighlight.ambiguousCharacters": false, // prevents cyrillic ruin my editor
  "editor.multiCursorModifier": "ctrlCmd", // most compatible with vim
  "editor.minimap.renderCharacters": false, // no need to see characters
  "editor.codeActionsOnSave": ["source.addMissingImports", "source.fixAll.eslint"],
  "codeium.enableSearch": true, // compact ui, readability
  "html.completion.attributeDefaultValue": "singlequotes", // community standard

  // VSCode-Vim
  "vim.foldfix": true, // for navigation between lines
  "vim.gdefault": true, // optional
  "vim.highlightedyank.enable": true, // standard
  "vim.cursorStylePerMode.normal": "block", // better visiblity
  "vim.overrideCopy": true, // SAME CLIPBOARD
  "vim.useSystemClipboard": true, // SAME CLIPBOARD
  "vim.hlsearch": true, // Better for new vimmers
  "vim.camelCaseMotion.enable": true,
  "vim.history": 200,
  "vim.smartRelativeLine": true,
  "vim.textwidth": 120,
  "vim.highlightedyank.textColor": "#000",
  "vim.highlightedyank.color": "#fff",
  // Replaced vim eaysmotion with find-then-jump
  // "vim.easymotionIncSearchForegroundColor": "#fff",
  // "vim.easymotionMarkerForegroundColorTwoCharFirst": "#fff",
  // "vim.easymotionMarkerForegroundColorTwoCharSecond": "#fff",
  // "vim.easymotionMarkerForegroundColorOneChar": "#fff",

  // "vim.searchMatchColor": "#fff",
  // "vim.searchHighlightTextColor": "#fff",
  // "vim.searchHighlightColor": "#000",
  // "vim.searchMatchTextColor": "#000",
  // "vim.substitutionColor": "#FF0000",
  // "vim.substitutionTextColor": "#000000",

  // Exclude files
  "files.exclude": {
    "**/globalStorage": false,
    "**/workspaceStorage": false,
    "**/snippets": false,
    "**/History": false,
    "**/flutter_01.log": false,
    "**/.svn": false,
    "**/.hg": false,
    "**/CVS": false,
    "**/test": false,
    "**/.metadata": false,
    "**/pubspec.lock": false,
    "**/README.md": false,
    "**/.DS_Store": false,
    "**/Thumbs.db": false,
    "**/node_modules": false,
    "**/build": false,
    "**/drizzle": false,
    "**/dist": false,
    "**/.todo.md": false,
    "**/.flutter-plugins": false,
    "**/.flutter-plugins-dependencies": false,
    "**/.dart_tool": false,
    "**/.lintstagedrc.mjs": false,
    "**/.markdownlint.json": false,
    "**/.markdownlintignore": false,
    "**/cspell.json": false,
    "**/next-env.d.ts": false,
    "**/migrate.ts": false,
    "**/.idea": false,
    "**/LICENSE": false,
    "**/__tests__": false,
    "**/_ruby-version": false,
    "**/_node-version": false,
    "**/_bundle": false,
    "**/Gemfile": false
  },

  "window.commandCenter": true, // Зайгаа хэмнэмээр байвал `false` болгож болно
  "debug.internalConsoleOptions": "openOnSessionStart",
  // "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 120,
  "editor.fastScrollSensitivity": 3,

  // TODO TREE
  "todo-tree.tree.showCountsInTree": true,
  "todo-tree.general.statusBar": "tags",
  "todo-tree.general.tags": ["ASK:", "API:", "BUG", "FIXME", "TODO", "UI:", "LANG:"],

  "zenMode.showTabs": "none",
  "zenMode.centerLayout": false,
  "git.openRepositoryInParentFolders": "always",
  "editor.accessibilitySupport": "off",

  // Find it faster fzf alternative for vscode
  "find-it-faster.general.batTheme": "base16",
  "find-it-faster.advanced.disableStartupChecks": true,
  "find-it-faster.general.openFileInPreviewEditor": true,

  "gitlens.remotes": [{ "domain": "git.ictgroup.mn", "type": "GitLab" }],

  // whichkey
  "whichkey.sortOrder": "custom",
  "whichkey.showButtons": false,
  "whichkey.useFullWidthCharacters": true,
  "whichkey.bindingOverrides": [
    { "keys": " ", "name": "Find Files (Root Dir)", "type": "command", "command": "find-it-faster.findFiles" },
    { "keys": ":", "name": "Command History", "type": "command", "command": "workbench.action.showCommands" },
    { "keys": ",", "name": "Switch Buffer", "type": "command", "command": "workbench.action.showEditorsInActiveGroup" },
    {
      "keys": "a",
      "name": "+AI",
      "type": "bindings",
      "bindings": [
        { "key": "a", "name": "Toggle (Chat)", "type": "command", "command": "windsurf.prioritized.chat.open" }
      ]
    },
    {
      "keys": "b.o",
      "name": "Close Other Buffers",
      "type": "command",
      "command": "workbench.action.closeOtherEditors"
    },
    { "keys": "b.p", "name": "Toggle Pin", "type": "command", "command": "togglePinEditor.togglePinEditor" },
    {
      "keys": "b.P",
      "name": "Delete Non-Pinned Buffers",
      "type": "command",
      "command": "workbench.action.closeOtherEditors"
    },
    {
      "keys": "e",
      "name": "Toggle Explorer",
      "type": "command",
      "command": "workbench.action.toggleSidebarVisibility"
    },
    { "keys": "E", "name": "Toggle Explorer", "type": "command", "command": "workbench.action.toggleAuxiliaryBar" },
    {
      "keys": "c",
      "name": "+Code",
      "type": "bindings",
      "bindings": [
        { "key": "a", "name": "Code Action/Quick Fix", "type": "command", "command": "editor.action.quickFix" },
        { "key": "A", "name": "Source Action", "type": "command", "command": "editor.action.sourceAction" },
        { "key": "s", "name": "Outline Focus", "type": "command", "command": "workbench.action.gotoSymbol" },
        { "key": "u", "name": "Organize Imports", "type": "command", "command": "editor.action.organizeImports" },
        { "key": "r", "name": "Rename", "type": "command", "command": "editor.action.rename" },
        { "key": "R", "name": "Rename File", "type": "command", "command": "file-browser.rename" }
