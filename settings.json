        { "key": "s", "name": "Show Bookmarks", "type": "command", "command": "workbench.view.extension.bookmarks" }
      ]
    },
    {
      "keys": "u",
      "name": "+UI",
      "type": "bindings",
      "bindings": [
        {
          "key": "a",
          "name": "Toggle Animations",
          "command": "toggle",
          "when": "editorTextFocus",
          "args": {
            "id": "toggleAnimations",
            "value": [
              {
                // "editor.cursorSmoothCaretAnimation": "off", // Vscode Animation байгаа болохоор аль ч үед `off` байхаар болголоо
                "editor.smoothScrolling": true,
                "editor.cursorBlinking": "smooth",
                "workbench.list.smoothScrolling": true,
                "terminal.integrated.smoothScrolling": true,
                "animations.Active": "Scale",
                "animations.Command-Palette": "Scale",
                "animations.CursorAnimation": true
              },
              {
                // "editor.cursorSmoothCaretAnimation": "off",
                "editor.smoothScrolling": false,
                "editor.cursorBlinking": "blink",
                "workbench.list.smoothScrolling": false,
                "terminal.integrated.smoothScrolling": false,
                "animations.Active": "None",
                "animations.Command-Palette": "None",
                "animations.CursorAnimation": false
              }
            ]
          }
        },
        {
          "key": "t",
          "name": "Toggle Tabs",
          "command": "toggle",
          "when": "editorTextFocus",
          "args": {
            "id": "workbench.editor.showTabs",
            "value": [{ "workbench.editor.showTabs": "multiple" }, { "workbench.editor.showTabs": "none" }]
          }
        },
